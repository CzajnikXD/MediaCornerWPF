<Window x:Class="MediaCornerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Media Corner" Height="250" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="10,12,0,0" Text="Login:"/>
        <TextBox Grid.Row="0" Margin="10,30,10,10" Name="txtUsername" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1"/>

        <TextBlock Grid.Row="1" Margin="10,0,0,0" Text="Password:"/>
        <PasswordBox Grid.Row="1" Margin="10,18,10,10" Name="txtPassword" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1"/>

        <Button Grid.Row="2" Margin="5" Content="Login" Click="Login_Click" HorizontalAlignment="Center" Width="100" Background="#FFDB44FF" BorderBrush="Black" BorderThickness="1"/>
    </Grid>
</Window>